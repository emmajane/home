doctype html
html
    head
        include head.jade
    
    body
        div#wrapper
            div#header
                h1
                    img(src='/jquery/jQuery_logo.png', alt='jQuery', height='45')
                    = 'Plugins'
                    cite
                        = 'by'
                        a(href='http://jordankasper.com') Jordan Kasper
                        a(href='http://twitter.com/jakerella', style='border-bottom:none; margin-left:0.7em;'): img(src='/images/twitter.png', alt='Twitter', width='20', style='top:0.2em;')

            div#content
                form(id='donateform', action='https://www.paypal.com/cgi-bin/webscr' method='post')
                    input(type='hidden' name='cmd' value='_s-xclick')
                    input(type='hidden' name='hosted_button_id' value='N7J7TPK8TCDRE')
                    input(type='image' src='https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif' border='0' name='submit' alt='PayPal - The safer, easier way to pay online!')
                    img(alt='' border='0' src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif' width='1' height='1')

                block content

            div#footer
                p#copyright
                    != '&copy; jordan kasper 2008 - '
                    = (new Date()).getFullYear()

                p#contact
                    != "<a href='ma&#105;lt&#111;:&#106;query&#064;&#106;&#111;rd&#97;nk&#97;sper.c&#111;m' title='Send an email to Jordan'>"
                    != '&#106;query&#064;&#106;&#111;rd&#97;nk&#97;sper.c&#111;m'
                    != '</a>'